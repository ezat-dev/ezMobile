<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/textView"-->
<!--        app:layout_constraintVertical_bias="0.817" />-->

    <Spinner
        android:id="@+id/spinner_machine_id"
        android:layout_width="113dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="8dp"
        android:entries="@array/machine_ids"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/common_buttons_layout" />

    <EditText
        android:id="@+id/et_start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:hint="시작 날짜 선택"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:autofillHints=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et_end_time"
        app:layout_constraintTop_toBottomOf="@+id/spinner_machine_id" />

    <EditText
        android:id="@+id/et_end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:hint="종료 날짜 선택"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:autofillHints=""
        app:layout_constraintStart_toEndOf="@+id/et_start_time"
        app:layout_constraintEnd_toStartOf="@+id/btn_select_chart"
        app:layout_constraintTop_toTopOf="@+id/et_start_time" />

    <Button
        android:id="@+id/btn_select_chart"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="조회"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_start_time"
        app:layout_constraintBottom_toBottomOf="@+id/et_start_time" />
    <include
        android:id="@+id/common_buttons_layout"
        layout="@layout/common_buttons" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="416dp"
        android:layout_height="278dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534" />

</androidx.constraintlayout.widget.ConstraintLayout>